<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.payswitch.chippysrevenge.PlayActivity"
    android:background="#bc8d8d8d">


    <TextView android:text="Nuts will roll !"
        android:paddingTop="250dp"
        android:paddingLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="40sp"
        android:background="#333"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView android:text="LEVEL"
        android:paddingTop="55dp"
        android:paddingLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/textView10" />

    <TextView android:text="23"
        android:paddingTop="150dp"
        android:paddingLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2"
        android:id="@+id/textView5" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:src="@drawable/playimage"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:text="HEALTH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="40sp"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234,567"
        android:textColor="#000"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView9"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nuts"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/textView7" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/sword"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/imageView2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/archer"
        android:id="@+id/imageButton5"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageButton
        android:src="@drawable/exitIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/imageButton9"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:src="@drawable/pauseicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toStartOf="@+id/imageButton9" />


</RelativeLayout>
