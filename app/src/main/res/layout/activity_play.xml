<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.payswitch.chippysrevenge.PlayActivity"
    android:background="#bc8d8d8d">


    <TextView android:text="Nuts will roll !"
        android:paddingTop="250dp"
        android:paddingLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="40sp"
        android:background="#333"
        android:id="@+id/Txtnutswillroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView android:text="LEVEL"
        android:paddingTop="55dp"
        android:paddingLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/Txtlevel" />

    <TextView android:text="23"
        android:paddingTop="150dp"
        android:paddingLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="60sp"
        android:id="@+id/Txt23"
        android:layout_alignBottom="@+id/Txtlevel"
        android:layout_alignEnd="@+id/Btnsword" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:src="@drawable/playimage"
        android:id="@+id/Imgplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Txtnutswillroll" />

    <TextView
        android:text="HEALTH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="40sp"
        android:id="@+id/Txthealth"
        android:layout_below="@+id/Imgplay"
        android:layout_toEndOf="@+id/Btnsword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234,567"
        android:textColor="#000"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:id="@+id/Txtnonuts"
        android:layout_marginStart="54dp"
        android:layout_alignTop="@+id/Btnsword"
        android:layout_toEndOf="@+id/Txtnutswillroll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nuts"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        android:id="@+id/Txtnuts"
        android:layout_alignTop="@+id/Txtnonuts"
        android:layout_toEndOf="@+id/Txtnonuts" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Btnsword"
        android:src="@drawable/sword"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="30dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/archer"
        android:id="@+id/Btnarcher"
        android:layout_above="@+id/Txthealth"
        android:layout_alignStart="@+id/Txthealth" />

    <ImageButton
        android:src="@drawable/pauseicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/Btnpause"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/Btnexit" />

    <ImageButton
        android:src="@drawable/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/Btnexit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
