<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.payswitch.chippysrevenge.ScoresActivity"
    android:background="@drawable/bg_scores">


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/img_paperscroll"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"></RelativeLayout>

            <ListView
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:id="@+id/list"
                android:layout_marginTop="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:layout_width="40dp"
                android:layout_height="200dp" ></ListView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"></RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/img_scores_title"/>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white">

        <Button
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Main Menu"
            android:id="@+id/btn_mainmenu"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/androidbluesquarebutton"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignRight="@+id/layout_lbl"
            android:layout_alignEnd="@+id/layout_lbl" />
    </RelativeLayout>


</RelativeLayout>
